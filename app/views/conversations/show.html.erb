<h1>Conversation</h1>

<%= turbo_stream_from @conversation %>

<div id="conversation_messages">
  <%= render @conversation.messages %>
</div>

<!-- Add your form for new messages here -->

<div class="text-input-form">
  <%= form_with(url: send_text_message_conversation_path(@conversation), local: true) do |form| %>
    <%= form.text_area :message, placeholder: "Type your message here...", rows: 3 %>
    <%= form.submit "Send Text Message" %>
  <% end %>
</div>

